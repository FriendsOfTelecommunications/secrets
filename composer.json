{
    "name": "re2bit/secrets",
    "description": "Core PHP Library for encrypting secrets, based on libsodium",
    "type": "library",
    "license": "BSD",
    "autoload": {
        "psr-4": {
            "Re2bit\\Secrets\\": "src/"
        }
    },
    "authors": [
        {
            "name": "RenÃ© Gerritsen",
            "email": "rene.gerritsen@me.com"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "repositories": {
        "37": {
            "type": "composer",
            "url": "https://gitlab.xaer.de/api/v4/group/37/-/packages/composer/"
        }
    },
    "config": {
        "gitlab-domains": [
            "gitlab.xaer.de"
        ]
    },
    "scripts": {
        "install-captainhook": [
            "captainhook install -c=captainhook.json"
        ],
        "cs": [
            "php-cs-fixer --config=.php-cs-fixer.dist.php check --verbose"
        ],
        "fixcs": [
            "php-cs-fixer --config=.php-cs-fixer.dist.php fix --verbose"
        ],
        "stan": [
            "phpstan analyse --level 8 -c phpstan.neon -n --memory-limit 2G ."
        ],
        "test": [
            "phpunit",
            "phpstan analyse --level 8 -c phpstan.neon -n --memory-limit 2G .",
            "php-cs-fixer --config=.php-cs-fixer.dist.php fix --verbose --dry-run"
        ],
        "test-ci": [
            "phpunit --log-junit=phpunit.xml",
            "phpstan analyse --level 8 -c phpstan.neon --no-progress -n --memory-limit 2G --error-format=gitlab . >> phpstan.json",
            "php-cs-fixer --config=.php-cs-fixer.dist.php fix --verbose --dry-run"
        ]
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.3.0",
        "friendsofphp/php-cs-fixer": "^3.4",
        "captainhook/captainhook": "dev-main"
    }
}
